<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/setting1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/button_close_profile"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/icon_close1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />
        <Button
            android:id="@+id/button_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="4dp"
            android:text="@string/profile_button_edit"
            style="@style/setting1"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="4dp"
            android:text="@string/profile_button_save"
            style="@style/setting1"
            android:textSize="18sp"
            android:visibility="invisible"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/profile_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:background="@color/setting1"
            android:src="@drawable/icon_avatar"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USER USER"
            android:textAlignment="center"
            android:textSize="17sp"
            style="@style/setting1"
            android:layout_marginTop="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_bio"
                style="@style/setting1"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/user_biography"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="25dp"
                style="@style/setting1"
                android:focusable="false"
                android:backgroundTint="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_experience"
                android:textAlignment="textStart"
                style="@style/setting1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/user_experience"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                style="@style/setting1"
                android:focusable="false"
                android:backgroundTint="@color/white"
                android:layout_marginTop="6dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_country"
                style="@style/setting1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/user_country"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                style="@style/setting1"
                android:focusable="false"
                android:backgroundTint="@color/white"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_skills"
                style="@style/setting1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/user_skills"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                style="@style/setting1"
                android:focusable="false"
                android:backgroundTint="@color/white"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_contacts"
                style="@style/setting1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/user_contact"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                style="@style/setting1"
                android:focusable="false"
                android:backgroundTint="@color/white"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_links"
                style="@style/setting1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/user_network"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                style="@style/setting1"
                android:focusable="false"
                android:backgroundTint="@color/white"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>